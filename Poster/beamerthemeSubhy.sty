\setbeamertemplate{headline}{
  \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.025\paperwidth}
      \end{column}
      \begin{column}{.125\paperwidth}
        \begin{center}
          \inserttitlegraphicl
        \end{center}
        \vskip1ex
      \end{column}
      \begin{column}{.7\paperwidth}
        \vskip4ex
        \centering
        \usebeamercolor{title in headline}{\color{fg}\usebeamerfont{title in headline}\inserttitle\\[1ex]}
        \usebeamercolor{author in headline}{\color{fg}\usebeamerfont{author in headline}{\insertauthor}\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\usebeamerfont{institute in headline}{\insertinstitute}\\[1ex]}
      \end{column}
      \begin{column}{.125\paperwidth}
        \vskip1cm
        \begin{center}
          \inserttitlegraphic
        \end{center}
        \vskip1.5cm
      \end{column}
      \begin{column}{.025\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{2pt}
  \end{beamercolorbox}
}

